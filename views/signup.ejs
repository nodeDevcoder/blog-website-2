
<%- include ("partials/header") %> 

<div class="container-fluid form-container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="form-container col-lg-6 ">
            <form action="/signup" method="POST">
                <input type="email" class="form-control" name="email" id="" placeholder="Email address" required>
                <div class="row mt-3">
                    <div class="col">
                        <input type="text" class="form-control" name="firstName" placeholder="First Name" required>
                    </div> 
                    <div class="col">
                        <input type="text" class="form-control" name="lastName" placeholder="Last Name" required>  
                    </div>
                </div> 
                <div class="row mt-3">
                    <div class="col">
                        <input type="text" class="form-control" name="username" placeholder="Username" required>
                    </div> 
                    <div class="col">
                        <input type="password" class="form-control" name="password" placeholder="Password" required>  
                    </div>
                </div>
                               
                <div class="row mt-3">
                    <div class="col">
                        <input type="radio" class="form-check-input" name="usertype" id="usertype-author" value="author" required>
                        <label class="form-check-label"for="usertype-author">Author</label>
                    </div>
                    <div class="col">
                        <input type="radio" class="form-check-input" name="usertype" id="usertype-reader" value="reader" required>
                        <label class="form-check-label" for="usertype-reader">Reader</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col"></div>
                    <div class="col-2">
                        <button type="submit" class="btn-primary">Submit</button>
                    </div>
                    <div class="col"></div>
                </div>
            </form>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>

<%- include ("partials/footer") %> 
