<%- include ("partials/header") %> 
<%- include ("partials/navbar") %> 
<div class="row">
    <div class="col-2 col-lg-4"></div>
    <div class="col-8 col-lg-4">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="pills-blog-tab" data-bs-toggle="pill" data-bs-target="#pills-blog" type="button" role="tab" aria-controls="pills-blog" aria-selected="true">Blogs</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="pills-user-tab" data-bs-toggle="pill" data-bs-target="#pills-user" type="button" role="tab" aria-controls="pills-user" aria-selected="false">Users</button>
            </li>
            </ul>
        <div class="tab-content mt-3" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-blog" role="tabpanel" aria-labelledby="pills-blog-tab" tabindex="0">
                <ul class="list-group list-group-flush">
                    <% if (blogs) { %>
                        <% blogs.forEach(blog => { %>   
                        <li class="list-group-item"><a href="/blogs/<%= blog._id %>/view"><%= blog.title %></a></li>
                    <% })} %> 
                    <% if (blogs.length < 1) { %>
                        <p class="undefined">We couldn't find any blogs matching your request! Please try a different search.</p>
                    <% } %>
                </ul>
            </div>
            <div class="tab-pane fade" id="pills-user" role="tabpanel" aria-labelledby="pills-user-tab" tabindex="0">
                <ul class="list-group list-group-flush">
                    <% if (users) { %>
                        <% users.forEach(user => { %>   
                    <li class="list-group-item d-flex justify-content-between align-items-center li-res"><div class="flw-pfp u-result"><img src="<%= user.profile.path.replace('/upload', '/upload/w_100') %>" alt="<%=user.firstName %>'s profile picture"> <span class="results-username">@<%= user.username %></span></div><div class="ms-2 me-auto"><a href="/users/<%= user._id %>"><%= user.firstName %> <%= user.lastName %></a></div></li>
                    <% })} %> 
                    <% if (users.length < 1) { %>
                        <p class="undefined">We couldn't find any users matching your request! Please try a different search.</p>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-2 col-lg-4"></div>
</div>

<%- include ("partials/footer") %>